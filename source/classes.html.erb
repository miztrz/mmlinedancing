<% classes = data.classes.map { |c| c[1] } %>

<main class="w3-text-theme">
        <div class="w3-container w3-responsive">
    <div class="w3-container"><h1 class="w3-center">Classes</h1></div>

        <table class="w3-table-all w3-card-4 small-screen-scale w3-margin-bottom">
    <tr class="w3-theme">
      <th>Name</th>
      <th>Day & Time</th>
      <th>Level</th>
      <th>Location</th>
      <th>Cost</th>
    </tr>

  <% classes.each do |cl| %>
  <tr class="w3-hover-theme">
  <td><%= cl.title %></td>
  <td><%= cl.day %>, <%= cl.start_time %> to <%= cl.end_time %></td>
  <td><%= cl.level %></td>
  <td><%= cl.location %></td>
  <td><%= cl.cost %></td>
</tr>
  <% end %>
</table>
</div>
</main>