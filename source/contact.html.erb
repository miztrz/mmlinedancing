                    <div class="w3-rest">
                        <input class="w3-input w3-border-0 w3-light-grey" name="name" type="text" placeholder="Name">
                    </div>
                </div>
                <div class="w3-row w3-section">
                    <div class="w3-col" style="width:50px"><i class="w3-xxlarge fa fa-envelope-o"></i></div>
                    <div class="w3-rest">
                        <input class="w3-input w3-border-0 w3-light-grey" name="email" type="email" placeholder="Email">
                    </div>
                </div>
                <div class="w3-row w3-section">
                    <div class="w3-col" style="width:50px"><i class="w3-xxlarge fa fa-pencil"></i></div>
                    <div class="w3-rest">
                        <textarea class="w3-input w3-border-0 w3-light-grey textarea" placeholder="Enquiry details" required></textarea>
                    </div>
                </div>
                <div class="w3-section w3-center">
                    <input type="submit" value="Submit" class="w3-button w3-theme w3-large">
                </div>
            </form>
        </div>
